
public class Personagem {
	private String nome;
	private int life = 20;
	private int tipoArma = 0;
	
	Arma arma = new Arma();
	Armadura armadura = new Armadura();

	public Personagem(){
		
	}
	
	public void ataque(){
		switch(tipoArma){
		case 1: arma.normal();
		break;
		case 2: arma.adaga();
		break;
		case 3: arma.faca();
		break;
		case 4: arma.espada();
		break;
		case 5: arma.espadaLonga();
		break;
		}
	}
}
