package model;

import java.io.FileNotFoundException;
import java.io.FileReader;
import java.util.Scanner;

public class Sala {
	public String modeloSala[] = new String [31];
	private int nSala;
	private Porta porta = new Porta();
	public Sala(){
		
	}
	
	public void criandoSala(){
		for (int i=0; i<=31; i++){
			if(modeloSala[i].substring(4, 5) == "1"){
				porta.south();
				porta.east();
			}
			else if(modeloSala[i].substring(4, 5) == "2"){
				porta.east();
				porta.west();
			}
			else if(modeloSala[i].substring(4, 5) == "3"){
				porta.south();
				porta.east();
				porta.west();
			}
			else if(modeloSala[i].substring(4, 5) == "4"){
				porta.south();
				porta.east();
				porta.west();
			}
			else if(modeloSala[i].substring(4, 5) == "5"){
				porta.south();
				porta.west();
			}
			else if(modeloSala[i].substring(4, 5) == "6"){
				porta.north();
				porta.south();
				porta.west();
			}
			else if(modeloSala[i].substring(4, 5) == "7"){
				porta.north();
				porta.east();
				porta.west();
			}
			else if(modeloSala[i].substring(4, 5) == "8"){
				porta.north();
				porta.south();
				porta.east();
				porta.up();
			}
			else if(modeloSala[i].substring(4, 5) == "9"){
				porta.north();
				porta.south();
				porta.west();
			}
			else if(modeloSala[i].substring(4, 6) == "10"){
				porta.north();
				porta.south();
				porta.east();
			}
			else if(modeloSala[i].substring(4, 6) == "11"){
				porta.east();
				porta.west();
				porta.up();
			}
			else if(modeloSala[i].substring(4, 6) == "12"){
				porta.west();
				porta.north();
				porta.south();
			}
			else if(modeloSala[i].substring(4, 6) == "13"){
				porta.north();
				porta.south();
			}
			else if(modeloSala[i].substring(4, 6) == "14"){
				porta.north();
				porta.south();
			}
			else if(modeloSala[i].substring(4, 6) == "15"){
				porta.east();
				porta.west();
				porta.up();
				porta.north();
			}
			else if(modeloSala[i].substring(4, 6) == "16"){
				porta.east();
				porta.west();
			}
		}
	}
	
	
	
	//Leitura de arquivo txt
	public void lendo() throws FileNotFoundException{
		
		//Chama o arquivo txt
		FileReader texto = new FileReader("coordenadas.txt");
		
		//Scanner para ler o arquivo acima e "useDelimiter" 
		//para saber onde o texto deve ter quebra de linha
		Scanner ler = new Scanner(texto).useDelimiter("\n");
		
		//"hasNext" para ler linha por linha
		while (ler.hasNext()) {
			int i=0;
			i++;
			String nome = ler.next();
			modeloSala[i] = nome;
		}
	}
}
