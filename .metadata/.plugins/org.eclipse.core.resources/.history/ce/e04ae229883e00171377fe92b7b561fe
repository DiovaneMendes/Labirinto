
public class Inimigo {
	private int danoI, acertoI;
	private boolean armado = false;
	
	Personagem personagem = new Personagem();
	
	public Inimigo(){
		
	}
	
	public void goblin(){
		danoI = 2;
		if(personagem.defesa()){
			acertoI = 55;
		}
		else{
			acertoI = 80;
		}
		if(armado == true){
			acertoI =+ acertoI;
		}
	}
	
	public void orc(){
		danoI = 4;
		if(personagem.defesa()){
			acertoI = 50;
		}
		else{
			acertoI = 75;
		}
		if(armado == true){
			acertoI =+ acertoI;
		}
	}
	
	public void troll(){
		danoI = 6;
		acertoI = 50;
		if(armado == true){
			acertoI =+ acertoI;
		}
	}
}
