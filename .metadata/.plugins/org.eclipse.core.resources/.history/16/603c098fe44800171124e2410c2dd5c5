package model;

import com.senac.SimpleJava.Graphics.Color;
import com.senac.SimpleJava.Graphics.Resolution;
import com.senac.SimpleJava.Graphics.Sprite;

public class Porta{
	public Sprite p1, p2, p3, p4, p5, p6;
	
	public Porta(){
		
	}
	
	//super(10, 2, Color.BLUE);
	public void north(){
		p1 = new Sprite(2, 10, Color.BLUE);
		p1.setPosition(
			Resolution.MSX.width/5-8,
			Resolution.MSX.height-192);
		//North quando tiver a porta up
		p1 = new Sprite(2, 10, Color.BLUE);
		p1.setPosition(
			Resolution.MSX.width/4+2,
			Resolution.MSX.height-192);
	}
	
	//super(10, 2, Color.BLUE);
	public void south(){
		p2 = new Sprite(2, 10, Color.BLUE);
		p2.setPosition(
			Resolution.MSX.width/5-8,
			Resolution.MSX.height-122);
		//South quando tiver a porta down
		p2 = new Sprite(2, 10, Color.BLUE);
		p2.setPosition(
			Resolution.MSX.width/4+2,
			Resolution.MSX.height-122);
	}
	
	//super(10, 2, Color.BLUE);
	public void up(){
		p3 = new Sprite(2, 10, Color.BLUE);
		p3.setPosition(
			Resolution.MSX.width/4-45,
			Resolution.MSX.height-192);
	}
	
	//super(10, 2, Color.BLUE);
	public void down(){
		p4 = new Sprite(2, 10, Color.BLUE);
		p4.setPosition(
			Resolution.MSX.width/4-45,
			Resolution.MSX.height-122);
	}
	
	//super(2, 10, Color.BLUE);
	public Sprite east(){
		p5 = new Sprite(2, 10, Color.BLUE);
		p5.setPosition(
			Resolution.MSX.width/10-25,
			Resolution.MSX.height-160);
		return p5;
	}
	
	//super(2, 10, Color.BLUE);
	public Sprite west(){
		p6 = new Sprite(2, 10, Color.BLUE);
		p6.setPosition(
			Resolution.MSX.width/5+30,
			Resolution.MSX.height-160);
		return p6;
	}
}