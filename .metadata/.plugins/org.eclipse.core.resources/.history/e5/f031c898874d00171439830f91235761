package model;

public class Sala{
	private Porta entradaNorth, entradaSouth, entradaEast, entradaWest, entradaUp, entradaDown;
	private int numeroSala;
	private String north, south, east, west, up, down;
	
	public Sala(String north, String south, String east, String west, String up, String down){
		//this.numeroSala = numeroSala;
		this.north = north;
		this.south = south;
		this.east = east;
		this.west = west;
		this.up = up;
		this.down = down;
		portaSala();
		
	}
	
	public void portaSala(){
		
		if (north != null){
			entradaNorth = new Porta("north");
		}
		if (south != null){
			entradaSouth = new Porta("south");
		}
		if (east != null){
			entradaEast = new Porta("east");
		}
		if (west != null){
			entradaWest = new Porta("west");
		}
		if (up != null){
			entradaUp = new Porta("up");
		}
		if (down != null){
			entradaDown = new Porta("down");
		}
	}
}