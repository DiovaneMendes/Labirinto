import com.senac.SimpleJava.Graphics.Sprite;

public class Porta{
	Sprite p0;
	
	
	public Porta(){
		
	}
	
	public Sprite north(){
		p0 = new Sprite(10, 2, Color.BLUE);
		p0.setPosition(
			Resolution.MSX.width/5-2,
			Resolution.MSX.height-192);
		return p0;
	}
	
	public Sprite south(){
		
		return p0;
	}
	
	public Sprite east(){
		
		return p0;
	}
	
	public Sprite west(){
		
		return p0;
	}
	
	public Sprite up(){
		
		return p0;
	}
	
	public Sprite down(){
		
		return p0;
	}
