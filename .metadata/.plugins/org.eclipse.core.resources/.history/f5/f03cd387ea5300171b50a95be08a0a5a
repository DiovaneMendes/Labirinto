package applications;



import com.senac.SimpleJava.Graphics.Color;
import com.senac.SimpleJava.Graphics.Point;
import com.senac.SimpleJava.Graphics.Resolution;
import com.senac.SimpleJava.Graphics.Sprite;

public class Porta{
	Sprite p1, p2, p3, p4, p5, p6;
	int northX = 0, northY = 200;
	
	public Porta(){
		
	}
	
	public Sprite north(){
		p1 = new Sprite(10, 2, Color.BLUE);
		p1.setPosition(northX, northY);
		/*p1.setPosition(
			Resolution.MSX.width/5-2,
			Resolution.MSX.height-192);*/
		return p1;
	}
	
	public Sprite south(){
		p2 = new Sprite(10, 2, Color.BLUE);
		p2.setPosition(
			Resolution.MSX.width/5-2,
			Resolution.MSX.height-122);
		return p2;
	}
	
	public Sprite east(){
		p3 = new Sprite(2, 10, Color.BLUE);
		p3.setPosition(
			Resolution.MSX.width/10-25,
			Resolution.MSX.height-160);
		return p3;
	}
	
	public Sprite west(){
		p4 = new Sprite(2, 10, Color.BLUE);
		p4.setPosition(
			Resolution.MSX.width/5+20,
			Resolution.MSX.height-160);
		return p4;
	}
	
	public Sprite up(){
		p5 = new Sprite(10, 2, Color.BLUE);
		p5.setPosition(
			Resolution.MSX.width/4-50,
			Resolution.MSX.height-192);
		return p5;
	}
	
	public Sprite down(){
		p6 = new Sprite(10, 2, Color.BLUE);
		p6.setPosition(
			Resolution.MSX.width/4-50,
			Resolution.MSX.height-122);
		return p6;
	}
}